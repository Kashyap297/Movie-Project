<%- include('../Partials/Header') %>
    <div class="container-fluid px-5">
        <div class="row align-items-center justify-content-center vh-80 ">
            <% movies.forEach((movie)=> { %>
                <div class="col-4">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="/<%= movie.movimage %>" class="img-fluid rounded-start" alt="..." >
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h5 class="card-title m-0 text-danger">
                                            <%= movie.title %>, <%= movie.year %>
                                        </h5>
                                        <span class="px-3 py-2 badge text-bg-dark rounded-pill ">
                                            <%= movie.genre %>
                                        </span>
                                    </div>
                                    <p class="card-text mt-2 mb-1">
                                        <%= movie.description %>
                                    </p>
                                    <div class="d-flex align-items-end justify-content-between mt-3 ">
                                        <span
                                            class="px-3 py-2 bg-light text-warning border border-warning rounded-pill">Rating
                                            : <%= movie.rating %></span>
                                        <div class="text-end d-flex align-items-center justify-content-between">
                                            <a href="/editData/<%= movie._id%>" class="btn btn-outline-dark me-2">Edit</a>
                                            <a href="/deleteData/<%= movie._id%>" class="btn btn-outline-dark">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <%- include('../Partials/Footer') %>